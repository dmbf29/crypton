<div class="all-news-box">
  <div class="news-header">
    <h4 style="text-align: center; padding: 15px 0; margin:0"><img class="reddit-logo" src="https://www.redditstatic.com/new-icon.png"><strong> r/Cryptocurrency</strong></h4>
  </div>
  <% @articles.each do |article|  %>
    <div class="card" style=" padding: 20px; border-bottom: solid #F3F3F3; display: flex; flex-direction: column; align-items: center; ">
      <% unless article.image_url == nil || article.image_url == "self" %>
        <img class="card-img-left" src=<%= article.image_url %> alt="Card image cap" style=" width: 150px; ">
      <% end %>
      <div class="card-body" style="text-align: justify;">
        <p class="card-title" style="font-size: 13px; padding-top: 10px; " ><%= article.title %> </p>
        <p class="card-text" style="font-size: 12px;"><%= article.description %></p>
        <p class="card-text" style="font-size: 12px; padding-top:10px; padding: padding-bottom: 0"><small class="text-muted">Published on <%= article.publishedAt.strftime("%b %e, %Y - %l:%M %p") %></small></p>
      </div>
      <button type="button" class="btn btn-dark show-news" id="show-news" data-url= "<%= article.source %>">Expand news</button>
    </div>
  <% end %>
</div>