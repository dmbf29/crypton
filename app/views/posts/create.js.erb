function refreshForm(innerHTML) {
  const newCommentForm = document.getElementById('new_post');
  newCommentForm.innerHTML = innerHTML;
}

function addPost(reviewHTML) {
  const posts = document.getElementById('posts');
  posts.insertAdjacentHTML('afterbegin', reviewHTML);
}
