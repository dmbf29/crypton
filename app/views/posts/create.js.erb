<% if @post.errors.any? %>
  refreshForm('<%= j render "posts/form", post: @post %>');
<% else %>
  addPost('<%= j render "posts/individual", post: @post %>');
  refreshForm('<%= j render "posts/form", post: Post.new %>');
<% end %>
