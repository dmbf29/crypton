<div class="home-post-show-first">
  <article class="home-post-show-second">
    <div class="home-post-show-third">
      <div class="vote-card">
        <%= render 'posts/vote_buttons', post: post %>
      </div>

      <div class="home-post-card">
        <div class="post-card-header">
          <span class="user-profile-link-container">
            <%= link_to user_path(post.user), class: 'user-profile-link' do %>
              <span><%= post.user.username %></span>
            <% end %>
          </span>
          <span class="post-created-at"><%= post.created_at.strftime("%b %e, %Y - %l:%M %p") %></span>
        </div>
        <div class="post-card-content">
          <span><%= post.content %></span>
        </div>
        <div class="post-card-footer">
          <ul class="post-card-footer-list">
            <li><%= link_to "View", post_path(post), class: 'view-comments-link' %> <span class="post-comment-count"><%= post.comments.count %></span> </li>
            <li><button onclick="triggerComment(this)" class="comment-button">Comment</button></li>
          </ul>
        </div>


        <div class="home_post_comment"><%= render 'comments/form', post: post, comment: @comment %></div>

      </div>
    </div>
  </article>
</div>
