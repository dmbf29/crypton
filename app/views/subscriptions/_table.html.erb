<div class="table100 ver5 m-b-110">
  <div class="table100-head">
    <table>
      <thead>
        <tr class="row100 head">
          <th class="cell100 column1"><strong>#</strong></th>
          <th class="cell100 column2"><strong>Name</strong></th>
          <th class="cell100 column3"><strong>Market Cap</strong></th>
          <th class="cell100 column4"><strong>Price</strong></th>
          <th class="cell100 column5"><strong>Volume</strong></th>
          <th class="cell100 column6"><strong>Circulating Supply</strong></th>
          <th class="cell100 column7"><strong>Change (24h)</strong></th>
          <th class="cell100 column8"></th>
        </tr>
      </thead>
    </table>
  </div>

  <div class="table100-body js-pscroll ps ps--active-y">
    <table>
      <tbody>
        <% if current_user %>
          <% current_user.subscriptions.each do |subscription| %>
            <tr class="row100 body">
              <td class="cell100 column1"><%=subscription.cryptocurrency.rank%> </td>
              <td class="cell100 column2"><strong><%=subscription.cryptocurrency.name%></strong></td>
              <td class="cell100 column3">$<%=subscription.cryptocurrency.Marketcap%></td>
              <td class="cell100 column4">$<%=subscription.cryptocurrency.market_price %></td>
              <td class="cell100 column5">$<%=subscription.cryptocurrency.Volume %></td>
              <td class="cell100 column6"><%=subscription.cryptocurrency.Supply%></td>
              <td class="cell100 column7"><%=subscription.cryptocurrency.Change%>%</td>
              <td class="cell100 column8">
                <%= link_to subscription_path(subscription), method: :delete do %>
                  <i class="far fa-times-circle table-row-delete"></i>
                <% end %>
              </td>
            </tr>
          <% end %>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
